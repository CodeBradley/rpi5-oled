"""
Configuration settings for the Raspberry Pi 5 OLED display application.
This file is managed by Ansible - local changes will be overwritten.
"""

# I2C settings
I2C_PORT = {{ rpi5_oled_i2c_port }}  # Default I2C port on Raspberry Pi
I2C_ADDRESS = {{ rpi5_oled_i2c_address }}  # Common address for SSD1306 OLED displays

# Display settings
DISPLAY_WIDTH = {{ rpi5_oled_display_width }}  # 0.91" OLED is typically 128x32 pixels
DISPLAY_HEIGHT = {{ rpi5_oled_display_height }}
ROTATION = {{ rpi5_oled_rotation }}  # 0 = normal, 1 = 90°, 2 = 180°, 3 = 270°

# Update frequency
UPDATE_INTERVAL = {{ rpi5_oled_update_interval }}  # Update display every 5 seconds

# Icons and visuals
ICON_SIZE = ({{ rpi5_oled_icon_size_width }}, {{ rpi5_oled_icon_size_height }})  # Size of status icons in pixels
FONT_SIZE = {{ rpi5_oled_font_size }}  # Default font size

# Enabled modules (comment out to disable)
ENABLED_MODULES = [
{% for module in rpi5_oled_enabled_modules %}
    '{{ module }}',
{% endfor %}
]

# Module-specific settings
MODULE_SETTINGS = {
    'ip_address': {
        'interface': '{{ rpi5_oled_ip_address_interface }}',  # Primary network interface
    },
    'ssh_status': {
        'service_name': '{{ rpi5_oled_ssh_service_name }}',  # SSH service name
    },
    'docker_status': {
        'socket_path': '{{ rpi5_oled_docker_socket_path }}',  # Docker socket path
    }
}
